<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
    <div class="form-control">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= job.title %>" required>
    </div>
    <div class="form-control">
        <label for="companyname">Company Name</label>
        <input type="text" id="companyname" name="companyname" value="<%= job.companyname %>" required>
    </div>
    <div class="form-control">
        <label for="location">Location</label>
        <input type="text" id="location" name="location" value="<%= job.location %>" required>
    </div>
    <div class="form-control">
        <label for="summary">Job Summary</label>
        <input type="text" id="summary" name="summary" value="<%= job.summary %>" required maxlength="250">
    </div>
    <div class="form-control">
        <label for="description">Job Descripion</label>
        <textarea name="description" id="description" rows="6" required><%= job.description %></textarea>
    </div>
    <div class="form-control">
        <label for="experience">Experience in year</label>
        <input type="number" id="experience" name="experience" min="0" step="0.5" value="<%= job.experience %>" required>
    </div>
    <div class="form-control">
        <label for="salary">Salary</label>
        <input type="text" id="salary" name="salary" value="<%= job.salary %>" required>
    </div>
    <div class="form-control">
        <label for="jobtype">Job Type</label>
        <input type="text" id="jobtype" name="jobtype" value="<%= job.jobtype %>">
      </div>
      <div class="form-control">
        <label for="worktype">Work Type</label>
        <input type="text" id="worktype" name="worktype" value="<%= job.worktype %>">
      </div>
      <div class="form-control">
        <label for="interviewtype">Interview Type</label>
        <input type="text" id="interviewtype" name="interviewtype" value="<%= job.interviewtype %>">
      </div>
      <div id="image-upload-control">
        <div class="form-control">
          <label for="image">Company Logo</label>
          <input type="file" name="image" id="image" accept="image/png,image/jpg,image/jpeg" <% if (imageRequired) { %>required<% } %>>
        </div>
        <img src="" alt="Selected image.">
      </div>
      <div id="action" class="form-control">
        <button type="reset" class="btn btn-alt">Reset</button>
        <button type="submit" class="btn">Save</button>
      </div>
</form> 