<%- include('../../shared/includes/head', {pageTitle: 'Add Job'}) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Add New Job</h1>
        <form action="/admin/jobs?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div class="form-control">
                <label for="companyname">Company Name</label>
                <input type="text" id="companyname" name="companyname" required>
            </div>
            <div class="form-control">
                <label for="location">Location</label>
                <input type="text" id="location" name="location" required>
            </div>
            <div class="form-control">
                <label for="summary">Job Summary</label>
                <input type="text" id="summary" name="summary" required maxlength="250">
            </div>
            <div class="form-control">
                <label for="description">Job Descripion</label>
                <textarea name="description" id="description" rows="6" required></textarea>
            </div>
            <div class="form-control">
                <label for="experience">Experience in year</label>
                <input type="number" id="experience" name="experience" min="0" step="0.5" required>
            </div>
            <div class="form-control">
                <label for="salary">Salary</label>
                <input type="number" id="salary" name="salary" min="500" step="500" required>
            </div>
            <div class="form-control">
                <label for="jobtype">Job Type</label>
                <select id="jobtype" name="jobtype">
                    <% for (const jobType of formData.jobTypes) { %>
                        <option value="<%= jobType %>"><%= jobType %></option>
                    <% } %>
                </select>
              </div>
              <div class="form-control">
                <label for="worktype">Work Type</label>
                <select id="worktype" name="worktype">
                    <% for (const workType of formData.workTypes) { %>
                        <option value="<%= workType %>"><%= workType %></option>
                    <% } %>
                </select>
              </div>
              <div class="form-control">
                <label for="interviewtype">Interview Type</label>
                <select id="interviewtype" name="interviewtype">
                    <% for (const interviewType of formData.interviewTypes) { %>
                        <option value="<%= interviewType %>"><%= interviewType %></option>
                    <% } %>
                </select>
              </div>
              <div class="form-control">
                <label for="image">Company Logo</label>
                <input type="file" name="image" id="image" accept="image/png,image/jpg,image/jpeg" required>
              </div>
              <div class="form-control">
                <button type="reset" class="btn btn-alt">Reset</button>
                <button type="submit" class="btn">Save</button>
              </div>
        </form>
        
    </main>
<%- include('../../shared/includes/footer') %>