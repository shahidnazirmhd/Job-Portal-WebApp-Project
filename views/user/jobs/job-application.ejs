<%- include('../../shared/includes/head', {pageTitle: job.title+' | Application'}) %>
<link rel="stylesheet" href="/styles/application.css">
<script src="/scripts/application.js" defer></script>
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <div class="application-form">
            <div id="face">
                <img src="<%= job.imageUrl %>" alt="<%= job.imageUrl %>">
                <h1><%= job.companyname %></h1>
            </div>
            <div class="application-form-detail">					
                <form action="/application/submit/<%= job.id %>?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
                    <h4>Contact Information</h4>
                    <div class="form-inline">
                        <div class="form-group">
                            <label for="fname">First Name *</label>
                            <input type="text" id="fname" name="fname" required>
                        </div>
                        <div class="form-group">
                            <label for="lname">Last Name *</label>
                            <input type="text" id="lname" name="lname" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="tel">Phone *</label>
                        <input type="tel" id="tel" name="tel" minlength="10" maxlength="10" required>
                    </div>
                    <br>
                    <h4>Position</h4>
                    <hr>
                    <div class="form-group">
                        <label for="position">Position you are applying for *</label>
                        <input type="text" id="position" name="position" value="<%= job.title %>" readonly>
                    </div>
                    <div class="form-group">
                        <label for="website">Portfolio Website</label>
                        <input type="url" id="website" name="website">
                    </div>
                    <div class="form-group">
                        <label for="salary">Salary Requirements</label>
                        <input type="text" id="salary" name="salary">
                    </div>
                    <div class="form-group">
                        <label for="joining">When can you start?</label>
                        <input type="text" id="joining" name="joining">
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="relocation">Are you willing to relocate?</label>
                        <br>
                        <div class="form-inline flex">
                            <input type="radio" id="relocation" name="relocation" value="Yes">
                            <label for="relocation">Yes</label>
                        </div>
                        <div class="form-inline flex">
                            <input type="radio" id="relocation" name="relocation" value="No">
                            <label for="relocation">No</label>
                        </div>
                        <div class="form-inline flex">
                            <input type="radio" id="relocation" name="relocation" value="Not Sure">
                            <label for="relocation">Not Sure</label>
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="last-employer">Last company you worked for?</label>
                        <input type="text" id="last-employer" name="last-employer" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" name="message" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="resume">Upload Resume</label>
                        <input type="file" id="resume" name="resume" accept="application/pdf">
                    </div>
                    <hr><br>
                    <div id="application-action">
                        <a class="btn btn-alt" id="goback">Cancel</a>
                        <button class="btn" type="submit">Submit Application</button>
                    </div>
                </form>				
            </div>
        </div>
    </main>
<%- include('../../shared/includes/footer') %>